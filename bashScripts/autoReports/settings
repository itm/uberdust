function addReading {

	if [ $# == 2 ]
	then
		#host.name/uberdust/rest/testbed/1
		UBERDUST_URL="http://host.name/rest/testbed/testbed.id"
		UBERDUST_PREFIX="urn:network:"
	
		time=$(date +%s)
	
		sensor=$1
		value=$2

		#create url
		URL=$UBERDUST_URL"/node/"$UBERDUST_PREFIX$HOSTNAME"/capability/urn:wisebed:node:capability:"$sensor"/insert/timestamp/"$time"000/reading/"$value
		#echo $URL
		#execute
		wget $URL -O wget.tmp

		#cleanup
		rm wget.tmp
	fi
}











