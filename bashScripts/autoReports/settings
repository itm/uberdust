function addReading {
  if [ $# == 2 ]
  then
    UBERDUST_URL="http://host.name/rest/testbed/testbed.id"
    UBERDUST_PREFIX="urn:network:"

    time=$(date +%s)

    sensor=$1
    value=$2

    #create url
    URL=$UBERDUST_URL"/node/"$UBERDUST_PREFIX$HOSTNAME"/capability/urn:network:node:capability:"$sensor"/insert/timestamp/"$time"000/reading/"$value"/"
    echo $URL
    #execute
    wget $URL -O /dev/null
  fi
}

function addStringReading {
  if [ $# == 2 ]
  then
    UBERDUST_URL="http://host.name/rest/testbed/testbed.id"
    UBERDUST_PREFIX="urn:network:"

    time=$(date +%s)

    sensor=$1
    value=$2

    #create url/testbed/{testbedId}/capability{capabilityId}/insert/timestamp/{timestamp}/stringreading/{stringReading}/
    URL=$UBERDUST_URL"/node/"$UBERDUST_PREFIX$HOSTNAME"/capability/urn:network:node:capability:"$sensor"/insert/timestamp/"$time"000/stringreading/"$value"/"
    echo $URL
    #execute
    wget $URL -O /dev/null
  fi
}

function addLinkReading {
  if [ $# == 3 ]
  then
    UBERDUST_URL="http://host.name/rest/testbed/testbed.id"
    UBERDUST_PREFIX="urn:network:"
	
    time=$(date +%s)
    target=$1
    sensor=$2
    value=$3

    #create url
    URL=$UBERDUST_URL"/link/"$UBERDUST_PREFIX$HOSTNAME"/urn:qopbot:"$target"/capability/urn:qopbot:node:capability:"$sensor"/insert/timestamp/"$time"000/reading/"$value"/"
    echo $URL
    #execute
    wget $URL -O /dev/null
  fi
}











