<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


    <!-- Set view resolver -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
        <property name="order" value="1"/>
        <property name="contentType" value="text/html; charset=UTF-8"/>
    </bean>

    <!-- Method/URL mapping to controller -->
    <bean class="org.springframework.web.servlet.handler.MethodUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="GET /testbed/*">testbedController</prop>
                <prop key="GET /node/*">nodeController</prop>
                <prop key="GET /link/*/*">linkController</prop>
                <prop key="GET /node/*/capability/*">capabilityController</prop>
                <prop key="GET /link/*/*/capability/*">capabilityController</prop>
            </props>
        </property>
    </bean>

    <!-- Testbed Info Controller -->
    <bean name="testbedController" class="uberdust.controllers.TestbedController">
        <property name="commandClass" value="uberdust.commands.TestbedCommand"/>
        <property name="testbedManager" ref="testbedManager"/>
        <property name="uriPattern" value="/testbed/{testbedId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="testbed"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="testbed/index"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>


    <!-- Node Info Controller -->
    <bean name="nodeController" class="uberdust.controllers.NodeController">
        <property name="commandClass" value="uberdust.commands.NodeCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="uriPattern" value="/node/{nodeId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="node"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="node/index"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Link Info Controller -->
    <bean name="linkController" class="uberdust.controllers.LinkController">
        <property name="commandClass" value="uberdust.commands.LinkCommand"/>
        <property name="linkManager" ref="linkManager"/>
        <property name="uriPattern" value="/link/{sourceId}/{targetId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="link"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="link/index"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Capability Controller -->
    <bean name="capabilityController" class="uberdust.controllers.CapabilityController">
        <property name="commandClass" value="uberdust.commands.CapabilityCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="linkManager" ref="linkManager"/>
        <property name="capabilityManager" ref="capabilityManager"/>
        <property name="uriPattern" value="/node/{nodeId}/capability/{capabilityId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="link"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="capability/index"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
</beans>