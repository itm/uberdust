<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


    <!-- Set view resolver -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- Method/URL mapping to controller -->
    <bean class="org.springframework.web.servlet.handler.MethodUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="GET /testbed/">listTestbedsController</prop>
                <prop key="GET /testbed/*">showTestbedController</prop>
                <prop key="GET /node/*">nodeController</prop>
                <prop key="GET /link/*/*">linkController</prop>
                <prop key="GET /node/*/capability/*">nodeCapabilityController</prop>
                <prop key="GET /node/*/capability/*/html">nodeCapabilityHTMLController</prop>
                <prop key="GET /node/*/capability/*/tabdelimited">nodeCapabilityTabDelimitedController</prop>
            </props>
        </property>
    </bean>

    <!-- List Testbeds Controller -->
    <bean name="listTestbedsController" class="uberdust.controllers.ListTestbedsController">
        <property name="commandClass" value="uberdust.commands.TestbedCommand"/>
        <property name="testbedManager" ref="testbedManager"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="testbed"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="testbed/list.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Show Testbed Controller -->
    <bean name="showTestbedsController" class="uberdust.controllers.ShowTestbedController">
        <property name="commandClass" value="uberdust.commands.TestbedCommand"/>
        <property name="testbedManager" ref="testbedManager"/>
        <property name="uriPattern" value="/testbed/{testbedId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="testbed"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="testbed/show.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>


    <!-- Node Info Controller -->
    <bean name="listNodesController" class="uberdust.controllers.ListNodesController">
        <property name="commandClass" value="uberdust.commands.NodeCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="uriPattern" value="/node/{nodeId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="node/view.html"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="node/view.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Link Info Controller -->
    <bean name="listLinksController" class="uberdust.controllers.ListLinksController">
        <property name="commandClass" value="uberdust.commands.LinkCommand"/>
        <property name="linkManager" ref="linkManager"/>
        <property name="uriPattern" value="/link/{sourceId}/{targetId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="link/view.html"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="link/view.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

        <!-- Node-Capability Controller -->
    <bean name="nodeCapabilityController" class="uberdust.controllers.NodeCapabilityController">
        <property name="commandClass" value="uberdust.commands.NodeCapabilityCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="capabilityManager" ref="capabilityManager"/>
        <property name="nodeReadingManager" ref="nodeReadingManager"/>
        <property name="uriPattern" value="/node/{nodeId}/capability/{capabilityId}"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="capability/view.html"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="capability/view.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Node-Capability Controller (HTML Format) -->
    <bean name="nodeCapabilityHTMLController" class="uberdust.controllers.NodeCapabilityHTMLController">
        <property name="commandClass" value="uberdust.commands.NodeCapabilityCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="capabilityManager" ref="capabilityManager"/>
        <property name="nodeReadingManager" ref="nodeReadingManager"/>
        <property name="uriPattern" value="/node/{nodeId}/capability/{capabilityId}/html"/>
        <property name="viewNameSelector">
            <bean class="org.springframework.web.servlet.RestViewNameSelector">
                <property name="defaultViewName" value="capability/readings.html"/>
                <property name="views">
                    <map>
                        <entry key="text/html" value="capability/readings.html"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Node-Capability Controller (Tab Delimited format)-->
    <bean name="nodeCapabilityTabDelimitedController" class="uberdust.controllers.NodeCapabilityTabDelimitedController">
        <property name="commandClass" value="uberdust.commands.NodeCapabilityCommand"/>
        <property name="nodeManager" ref="nodeManager"/>
        <property name="capabilityManager" ref="capabilityManager"/>
        <property name="nodeReadingManager" ref="nodeReadingManager"/>
        <property name="uriPattern" value="/node/{nodeId}/capability/{capabilityId}/tabdelimited"/>
    </bean>
</beans>